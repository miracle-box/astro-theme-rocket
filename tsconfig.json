{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "module": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@i18n": [
        "src/i18n/util"
      ],
      "@config": [
        "src/config"
      ]
    }
  },
}
