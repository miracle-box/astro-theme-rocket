{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "module": "ES2022",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@utils/*": ["src/utils/*"],
      "@config": ["src/config"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}
